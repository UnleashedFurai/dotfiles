  (Feishin, EXEC, feishin),
  (Games, EXEC, Games),
  (Kitty, SHORTCUT, "Mod4+q", EXEC, kitty),
  (Librewolf, SHORTCUT, "Mod4+d", EXEC, librewolf),
  (Trackma, EXEC, "kitty -- trackma-curses"),
  (Vim, EXEC, "kitty -- vim"),
  (Yazi, SHORTCUT, "Mod4+e", EXEC, "kitty -- yazi"),
  (Run..., EXEC, "%a(Run,Type command to run:)"),
  (
    Shortcuts,
    (
      Flameshot,
      SHORTCUT,
      Print,
      EXEC,
      "flameshot gui -p ~/Pictures/Screenshots"
    ),
    (Rofi, SHORTCUT, "Mod4+r", EXEC, "rofi -show drun"),
    (Logout, SHORTCUT, "Mod4+Delete", EXEC, "~/.local/bin/logout.sh"),
    (
      Audio,
      (
        Mute,
        SHORTCUT,
        XF86AudioMute,
        EXEC,
        "~/GNUstep/Library/WindowMaker/audio-manager.sh toggle-mute"
      ),
      (
        "Volume Up",
        SHORTCUT,
        XF86AudioRaiseVolume,
        EXEC,
        "~/GNUstep/Library/WindowMaker/audio-manager.sh vol-raise"
      ),
      (
        "Volume Down",
        SHORTCUT,
        XF86AudioLowerVolume,
        EXEC,
        "~/GNUstep/Library/WindowMaker/audio-manager.sh vol-lower"
      ),
      (Play, SHORTCUT, XF86AudioPlay, EXEC, "playerctl play-pause"),
      (Pause, SHORTCUT, XF86AudioPause, EXEC, "playerctl play-pause"),
      ("Next Track", SHORTCUT, XF86AudioNext, EXEC, "playerctl next"),
      (
        "Previous Track",
        SHORTCUT,
        XF86AudioPrev,
        EXEC,
        "playerctl previous"
      )
    )
  ),
  (
    WindowMaker,
    ("Workspace Menu", WORKSPACE_MENU),
    (Appearance, OPEN_MENU, appearance.menu),
    (
      Configuration,
      EXEC,
      "/usr/lib/GNUstep/Applications/WPrefs.app/WPrefs\n"
    ),
    ("Save Session", SAVE_SESSION),
    ("Clear Session", CLEAR_SESSION),
    ("Restart Window Maker", RESTART),
    (Exit, EXIT)
  )
)
